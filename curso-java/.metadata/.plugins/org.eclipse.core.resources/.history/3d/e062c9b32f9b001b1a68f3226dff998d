package fundamentos;

import java.util.Scanner;

public class DesafioCalculadora {
	public static void main(String[] args) {
		// num1
		// num2
		// + - * / %

		System.out.println("Digite primeiro número: ");
		var entrada1 = new Scanner(System.in);
		String num1 = entrada1.nextLine();
		entrada1.close();

		System.out.println("Digite segundo número: ");
		var entrada2 = new Scanner(System.in);
		String num2 = entrada2.nextLine();
		entrada2.close();

		System.out.println("Escolha a operação desejada: + , - , * , / , % ");
		var entrada3 = new Scanner(System.in);
		String operacao = entrada3.nextLine();
		entrada3.close();

		Double resultado = Double.parseDouble(num1 + operacao + num2);
		System.out.println("O resultado da operação é: " + resultado);

		entrada1.close();

	}
}
